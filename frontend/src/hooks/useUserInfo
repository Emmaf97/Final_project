import { useState, useEffect } from 'react';
import api from '../api'; // Axios instance
import { ACCESS_TOKEN } from '../constants';

export const useUserInfo = () => {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    const fetchUser = async () => {
      const token = localStorage.getItem(ACCESS_TOKEN);
      if (!token) {
        // No token, skip API call and set loading to false
        // console.log("No token found. Skipping API call.");
        setLoading(false);
        return;
      }

      try {
        // Token exists, make API call to fetch user profile
        // console.log("Token found. Fetching user profile...");
        const res = await api.get("/api/profile/");
        // console.log(res.data);
        setUser(res.data);  // Assuming the API returns user data
        // console.log("User profile fetched successfully:", res.data);
      } catch (error) {
        console.error("Error fetching user info:", error);
      } finally {
        setLoading(false);
      }
    };

    fetchUser();
  }, []);

  return { user, loading };
};